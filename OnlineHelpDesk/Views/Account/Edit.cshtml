@{
    ViewData["Title"] = "Account Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlineHelpDesk.Models.ViewModels.AccountViewModel

<section class="content-header">
    <h1>
        Edit Account
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="dashboard" asp-action="edit"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Edit Account</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">

            @if (ViewBag.msg != null)
            {
                if (ViewBag.msg == "Done")
                {
                    <div class="callout callout-success">
                        <h4>Successful</h4>
                    </div>
                }
                else
                {
                    <div class="callout callout-danger">
                        <h4>Failed</h4>
                    </div>
                }
            }

            <div class="box box-primary">

                <form asp-controller="account" asp-action="edit" method="post">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="fullname">Full Name</label>
                            <input type="text" class="form-control" id="fullname" required="required" asp-for="Account.FullName">
                        </div>

                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" required="required" asp-for="Account.Username">
                        </div>

                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" required="required" asp-for="Account.Email">
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" asp-for="Account.Password">
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Account.Status"> Check me out
                            </label>
                        </div>

                        <div class="form-group">
                            <label>Role</label>
                            <select class="form-control" asp-for="Account.RoleId" asp-items="@Model.Roles">
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="hidden" class="form-control" id="id" asp-for="Account.AccountId">
                        </div>

                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
