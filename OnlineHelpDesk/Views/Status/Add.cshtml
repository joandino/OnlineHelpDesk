@{
    ViewData["Title"] = "Add Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlineHelpDesk.Models.Status

<section class="content-header">
    <h1>
        Add Status
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="dashboard" asp-action="index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Add Status</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">

            @if (ViewBag.msg != null)
            {
                if (ViewBag.msg == "Done")
                {
                    <div class="callout callout-success">
                        <h4>Successful</h4>
                    </div>
                }
                else
                {
                    <div class="callout callout-danger">
                        <h4>Failed</h4>
                    </div>
                }
            }

            <div class="box box-primary">

                <form asp-controller="status" asp-action="add" method="post">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" required="required" asp-for="Name">
                        </div>

                        <div class="form-group">
                            <label>Role</label>
                            <select class="form-control" asp-for="Color">
                                <option value="success">Success</option>
                                <option value="warning">Warning</option>
                                <option value="danger">Danger</option>
                                <option value="info">Info</option>
                            </select>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Display" checked> Status
                            </label>
                        </div>

                        <div class="form-group">
                            <input type="hidden" class="form-control" id="id" asp-for="StatusId">
                        </div>

                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
